<form class="{{cssClass}}" autocomplete="off">
    <!-- Item Sheet Header-->
    <header class="sheet-header">
        <img class="profile" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <h1>
            <input name="name" type="text" value="{{item.name}}" placeholder="Name"/>
        </h1>
    </header>

    <!-- Item Sheet Navigation -->
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item" data-tab="description">{{ localize "openlegend.core.description"}}</a>
        <a class="item active" data-tab="details">{{ localize "openlegend.core.details"}}</a>
    </nav>

    <!-- Item Sheet Body-->
    <div class="sheet-body">
        <!-- Item Description Tab -->
        {{> "systems/openlegend/templates/partials/item-description.hbs" }}

        <!-- Item Details Tab-->
        <div class="tab details" data-group="primary" data-tab="details">
            <h3 class="form-header">{{ localize "openlegend.core.itemWeaponDetails" }}</h3>

            <!-- Weapon Wealth Level-->
            <div class="form-group">
                <label>{{ localize "openlegend.core.wealthLevel" }}</label>
                <div class="form-fields">
                    <input type="text" name="data.wealthLevel" value="{{data.wealthLevel}}"/>
                </div>
            </div>


            <!-- Weapon Categories -->
            <div class="form-group stacked weapon-categories">
                <label>{{ localize "openlegend.core.categories" }}</label>
                {{#each config.weaponCategories as |name cat|}}
                    <label class="checkbox">
                        <input type="checkbox" name="data.categories.{{cat}}" {{checked
                                (lookup ../data.categories cat)}}/> {{ localize name }}
                    </label>
                {{/each}}
            </div>

            <!-- Weapon Properties -->
            <div class="form-group stacked weapon-properties">
                <label>{{ localize "openlegend.core.properties" }}</label>
                {{#each config.weaponProperties as |name prop|}}
                    <label class="checkbox">
                        <input type="checkbox" name="data.properties.{{prop}}" {{checked
                                (lookup ../data.properties prop)}}/> {{ localize name }}
                    </label>
                {{/each}}
            </div>

            <!-- Weapon Banes -->
            <div class="form-group stacked weapon-banes">
                <label>{{ localize "openlegend.core.banes" }}</label>
                {{#each config.banes as |name bane|}}
                    <label class="checkbox">
                        <input type="checkbox" name="data.banes.{{bane}}" {{checked
                                (lookup ../data.banes bane)}}/> {{ localize name }}
                    </label>
                {{/each}}
            </div>

        </div>
    </div>
</form>
